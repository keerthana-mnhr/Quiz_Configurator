<Window x:Class="Quiz_Configurator.Import_Questions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_Configurator"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="Import_Questions" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="LightBlue" >
            <TextBlock Text="Import Questions From Open Trivia Database" 
                       FontSize="16" Margin="3,2,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="X"
                Height="20" Width="20"
                Background="Maroon"
                Margin="1,1,2,1"
                Click="Button_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="73*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Category" FontSize="20" FontWeight="Heavy"
                       Margin="20,20,20,370" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="Question_Category"    Height="40" Margin="20,55,20,325" Grid.ColumnSpan="2"/>

            <TextBlock Text="Difficulty" FontSize="20" FontWeight="Heavy"
               Margin="20,120,20,260" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="Question_Difficulty"    Height="40" Margin="20,165,20,215" Grid.ColumnSpan="2"
                     />




            <TextBlock Text="Number Of Questions:"
                   FontWeight="ExtraBlack" FontSize="20"
                   Margin="20,230,20,160" Grid.ColumnSpan="2" />

            <TextBlock Text="{Binding ElementName=NumberOfQuestionSlider, Path=Value, StringFormat=\{0:F0\}}" 
                       HorizontalAlignment="Right"
                       Margin="3,230,20,160" Width="20"
                       FontSize="25" Grid.Column="1"/>

            <Slider x:Name="NumberOfQuestionSlider"  Margin="20,265,20,126" Minimum="0" 
                    Maximum="20" Value="1" 
                    TickFrequency="1" TickPlacement="BottomRight" Grid.ColumnSpan="2"/>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button  Background="LightBlue"
                     Content="Import" Click="Button_Click"
                         FontSize="12" Height="30" Width="95"
                     Margin="100,300,10,2"
                     BorderBrush="Black"
                    />
            </StackPanel>
            <Button Background="LightBlue"  
                    Content="Cancel" Click="Button_Click_1"
                    FontSize="12"
                     Height="30" Width="95"
                    BorderBrush="Black"
            Margin="85,305,20,2" Grid.Column="1"
            />
        </Grid>

    </Grid>
</Window>
